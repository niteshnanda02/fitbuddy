<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">
        <TextView
            android:id="@+id/user_home_name"
            android:fontFamily="@font/museo700regular"
            style="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center|start"
            android:text="@string/welcome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></TextView>

        <TextView
            android:gravity="center|start"
            style="@style/TextAppearance.AppCompat.Medium"
            android:fontFamily="@font/museo500"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"></TextView>

        <TextView
            android:gravity="center|start"
            style="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/museo700regular"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/chooseSession"
            android:layout_weight="2"></TextView>
        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/user_home_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"></LinearLayout>

</LinearLayout>