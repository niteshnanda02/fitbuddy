<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".loginsignup.RegistrationDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/fitbuddy"
            android:padding="15dp"></ImageView>
        <TextView
            android:fontFamily="@font/museo700regular"
            style="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Personal Details"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:fontFamily="@font/museo500"
                style="@style/TextAppearance.AppCompat"
                android:layout_weight="1"
                android:gravity="center|start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Gender"></TextView>
            <RadioGroup
                android:id="@+id/registration_radiogroup"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <RadioButton
                    android:fontFamily="@font/museo500"
                    android:id="@+id/male_radiobutton"
                    android:text="Male"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></RadioButton>

                <RadioButton
                    android:fontFamily="@font/museo500"
                    android:id="@+id/female_radiobutton"
                    android:text="Female"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></RadioButton>


            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:fontFamily="@font/museo500"
                android:gravity="center|start"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Age"></TextView>
            <EditText
                android:fontFamily="@font/museo500"
                style="@style/TextAppearance.AppCompat"
                android:id="@+id/registration_age"
                android:layout_weight="3"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                >

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:fontFamily="@font/museo500"
                    style="@style/TextAppearance.AppCompat"
                android:gravity="center|start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Height"></TextView>
            <EditText

                android:fontFamily="@font/museo500"
                style="@style/TextAppearance.AppCompat"
                android:id="@+id/registration_height"
                android:layout_weight="2.5"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                ></EditText>
            <TextView
                android:fontFamily="@font/museo500"
                style="@style/TextAppearance.AppCompat"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="cm"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:gravity="center|start"
                android:fontFamily="@font/museo500"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Weight"></TextView>
            <EditText
                android:id="@+id/registration_weight"
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:inputType="number"

                android:fontFamily="@font/museo500"
                style="@style/TextAppearance.AppCompat"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                ></EditText>
            <TextView
                android:fontFamily="@font/museo500"
                style="@style/TextAppearance.AppCompat"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="kg"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:gravity="center|start"
                android:fontFamily="@font/museo500"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Profession"></TextView>

            <Spinner
                android:id="@+id/registration_profession_spinner"
                android:layout_weight="3"
                android:layout_width="0dp"

                android:fontFamily="@font/museo500"
                style="@style/TextAppearance.AppCompat"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                ></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:gravity="center|start"
                android:fontFamily="@font/museo500"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Proficiency Level"></TextView>
            <Spinner
                android:id="@+id/registration_proficiency_spinner"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingStart="15dp"

                ></Spinner>
        </LinearLayout>
        <Button
            android:text="Done"
            android:id="@+id/registration_details_btn"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/round"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/museo500"
            android:textAllCaps="false"></Button>

    </LinearLayout>
</RelativeLayout>