<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ProgressBar
        android:visibility="invisible"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/save_session_progress_bar"
        ></ProgressBar>

    <TextView
        android:visibility="invisible"
        android:paddingTop="5dp"
        android:gravity="center"
        android:id="@+id/save_session_text"
        android:fontFamily="@font/museo700regular"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="we have save your session"
        ></TextView>
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/save_session_btn"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/round"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/museo500"
        android:textAllCaps="false"
        android:text="Sessions ->"></Button>
</LinearLayout>